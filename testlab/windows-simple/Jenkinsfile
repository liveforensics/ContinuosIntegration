pipeline {
    agent {
        node {
            label 'WindowsOne'
        }
    }
    stages {
        stage('Preparation') {
            steps {
                git 'https://github.com/microsoft/VCSamples.git'
            }
        }
        stage('Build') {
            steps {
                echo 'do some build magic'
                bat 'C:\\BuildTools\\Common7\\Tools\\VsDevCmd.bat'
                powershell '$env:path -split ";"'
                powershell './msbuild.exe --version'
            
            }
        }
    }
    
}
