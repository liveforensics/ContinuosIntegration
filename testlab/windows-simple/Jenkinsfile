                    bat 'call C:\\BuildTools\\Common7\\Tools\\VsDevCmd.bat && msbuild.exe' 
                }
                // bat 'call C:\\BuildTools\\Common7\\Tools\\VsDevCmd.bat'
                // powershell '$env:path -split ";"'

                // powershell 'msbuild --version'
            
            }
        }
    }
    
}
